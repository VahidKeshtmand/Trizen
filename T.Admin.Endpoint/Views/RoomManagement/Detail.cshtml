@model T.Application.Dtos.Rooms.DetailRoomDto

<div class="dashboard-bread dashboard--bread dashboard-bread-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="breadcrumb-content">
                    <div class="section-heading">
                        <h2 class="sec__title font-size-30 text-white">جزئیات اتاق @Model.Name</h2>
                    </div>
                </div><!-- end breadcrumb-content -->
            </div><!-- end col-lg-6 -->
            <div class="col-lg-6">
                <div class="breadcrumb-list text-right">
                    <ul class="list-items">
                        <li><a asp-action="Index" asp-controller="Home" class="text-white">صفحه اصلی</a></li>
                        <li><a asp-action="Index" asp-controller="RoomManagement" asp-route-hotelId="@Model.HotelId" class="text-white"> لیست اتاق ها</a></li>
                        <li>جزئیات اتاق</li>
                    </ul>
                </div><!-- end breadcrumb-list -->
            </div><!-- end col-lg-6 -->
        </div><!-- end row -->
    </div>
</div><!-- end dashboard-bread -->

<div class="dashboard-main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">جزئیات اتاق</h3>
                    </div>
                    <div class="form-content">
                        <ul class="list-items list-items-2 list--items-2">
                            <li><span>نام : </span>@Model.Name</li>
                            <li><span>تعداد تخت : </span>@Model.BedCount</li>
                            <li><span>اندازه : </span>@Model.Size</li>
                            <li><span>امکانات : </span>@foreach (var item in Model.Amenities)
                            {
                                <li>@item</li>
                            }</li>
                            <li><span>سرویس دهی : </span>@foreach (var item in Model.ServiceAmenities)
                            {
                                <li>@item</li>
                            }</li>
                            <li><span>عکس ها : </span>
                                <div class="form-content">
                                    @foreach (var item in Model.ImagesSrc)
                                    {
                                        <img src="@item" style="max-height:100px; max-width:100px;"/>   
                                    }
                                </div>
                            </li>
                        </ul>
                        <div class="btn-box mt-4">
                            <a asp-action="Index" asp-controller="RoomManagement" asp-route-hotelId="@Model.HotelId" class="theme-btn theme-btn-small"><i class="la la-envelope mr-1"></i> بازگشت </a>
                        </div>
                    </div>
                     
                </div><!-- end form-box -->
            </div><!-- end col-lg-12 -->
        </div><!-- end row -->
        <div class="border-top mt-5"></div>
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="copy-right padding-top-30px">
                    <p class="copy__desc">
                        &copy; تمامی حقوق محفوظ است . توسعه با
                        <span class="la la-heart"></span> توسط <a href="https://arezo-hoseini.ir">آرزو حسینی</a>
                    </p>
                </div><!-- end copy-right -->
            </div><!-- end col-lg-7 -->
            <div class="col-lg-5">
                <div class="footer-social-box text-right padding-top-30px">
                    <ul class="social-profile">
                        <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                        <li><a href="#"><i class="lab la-twitter"></i></a></li>
                        <li><a href="#"><i class="lab la-instagram"></i></a></li>
                        <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                    </ul>
                </div><!-- end copy-right-content -->
            </div><!-- end col-lg-5 -->
        </div><!-- end row -->
    </div><!-- end container-fluid -->
</div><!-- end dashboard-main-content -->
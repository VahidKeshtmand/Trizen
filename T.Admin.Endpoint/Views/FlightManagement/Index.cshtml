@using T.Domain.Hotels
@model T.Application.Dtos.Common.PaginatedItemsDto<T.Application.Dtos.Flights.AirlineCompanyListDto>

<div class="dashboard-bread dashboard--bread dashboard-bread-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="breadcrumb-content">
                    <div class="section-heading">
                        <h2 class="sec__title font-size-30 text-white">لیست شرکت های هواپیمایی</h2>
                    </div>
                </div><!-- end breadcrumb-content -->
            </div><!-- end col-lg-6 -->
            <div class="col-lg-6">
                <div class="breadcrumb-list text-right">
                    <ul class="list-items">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">صفحه اصلی</a></li>
                        <li>مدیریت شرکت های هواپیمایی</li>
                        <li>لیست شرکت های هواپیمایی</li>
                    </ul>
                </div><!-- end breadcrumb-list -->
            </div><!-- end col-lg-6 -->
        </div><!-- end row -->
    </div>
</div><!-- end dashboard-bread -->
<div class="dashboard-main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">شرکت های هواپیمایی</h3>
                    </div>
                    <div class="form-content">
                        <a asp-action="AddAirlineCompany" asp-controller="FlightManagement"
                            class="theme-btn theme-btn-small mr-2 mb-2">ثبت
                            شرکت هواپیمایی جدید</a>
                        <form class="row col-md-3" method="get" asp-action="Index" asp-controller="FlightManagement">
                            <input class="form-control col-md-8" name="SearchKey" placeholder="جستجو کنید ...">
                            <input type="submit" class="theme-btn theme-btn-small ml-2 mb-2" value="جستجو">
                        </form>
                        <div class="table-form table-responsive">
                            <table id="listTable" class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">لوگو</th>
                                        <th scope="col">نام</th>
                                        <th scope="col">آدرس</th>
                                        <th scope="col">تلفن</th>
                                        <th scope="col">وبسایت</th>
                                        <th scope="col">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Data)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@item.ImageSrc" width="100" />
                                            </td>
                                            <td>
                                                <div class="table-content">@item.Name</div>
                                            </td>
                                            <td>@item.Address</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Website</td>
                                            <td>
                                                <div class="table-content">
                                                    <button onclick="ShowAlertFlight(@item.Id, 'DeleteAirlineCompany')"
                                                    class="theme-btn theme-btn-small mr-2">حذف</button>
                                                    <a asp-action="EditAirlineCompany" asp-controller="FlightManagement"
                                                    asp-route-id="@item.Id"
                                                    class="theme-btn theme-btn-small mr-2">ویرایش</a>
                                                    <a asp-action="FlightList" asp-controller="FlightManagement"
                                                    asp-route-airlineCompanyId="@item.Id"
                                                    class="theme-btn theme-btn-small mr-2">میدیریت پرواز ها</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- end form-box -->
            </div><!-- end col-lg-12 -->
        </div><!-- end row -->
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @prevDisabled">
                            <a class="page-link page-link-nav" asp-action="Index" asp-controller="FlightManagement"
                                aria-label="Previous" asp-route-pageIndex="@(Model.PageIndex - 1)">
                                <span aria-hidden="true"><i class="la la-angle-right"></i></span>
                                <span class="sr-only">قبلی</span>
                            </a>
                        </li>
                        @foreach (var item in Model.Pager.Pages)
                        {
                            @if (item == Model.PageIndex)
                            {
                                <li class="page-item active">
                                    <a class="page-link page-link-nav" asp-action="Index" asp-controller="FlightManagement"
                                asp-route-pageIndex="@item">@item<span class="sr-only">(جاری)</span></a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link page-link-nav" asp-action="Index"
                                asp-controller="FlightManagement" asp-route-pageIndex="@item">@item</a></li>
                            }

                        }


                        <li class="page-item @nextDisabled">
                            <a class="page-link page-link-nav" asp-action="Index" asp-controller="FlightManagement"
                                asp-route-pageIndex="@(Model.PageIndex + 1)" aria-label="Next">
                                <span aria-hidden="true"><i class="la la-angle-left"></i></span>
                                <span class="sr-only">بعدی</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="border-top mt-5"></div>
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="copy-right padding-top-30px">
                    <p class="copy__desc">
                        &copy; تمامی حقوق محفوظ است . توسعه با
                        <span class="la la-heart"></span> توسط <a href="https://arezo-hoseini.ir">آرزو حسینی</a>
                    </p>
                </div><!-- end copy-right -->
            </div><!-- end col-lg-7 -->
            <div class="col-lg-5">
                <div class="footer-social-box text-right padding-top-30px">
                    <ul class="social-profile">
                        <li><a href="#"><i class="lab la-facebook-f"></i></a></li>
                        <li><a href="#"><i class="lab la-twitter"></i></a></li>
                        <li><a href="#"><i class="lab la-instagram"></i></a></li>
                        <li><a href="#"><i class="lab la-linkedin-in"></i></a></li>
                    </ul>
                </div><!-- end copy-right-content -->
            </div><!-- end col-lg-5 -->
        </div><!-- end row -->
    </div><!-- end container-fluid -->
</div><!-- end dashboard-main-content -->

@section Css
{
<link rel="stylesheet" href="~/css/toastr.min.css">

}
@section Scripts
{
<script src="~/js/sweetalert2.all.min.js"></script>
<script src="~/js/toastr.min.js"></script>
<script src="~/js/custom-alert.js"></script>
}

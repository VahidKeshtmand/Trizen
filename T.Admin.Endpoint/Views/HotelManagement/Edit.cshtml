@using T.Domain.Hotels
@model T.Application.Dtos.Hotels.EditDto

<div class="dashboard-bread dashboard--bread dashboard-bread-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="breadcrumb-content">
                    <div class="section-heading">
                        <h2 class="sec__title font-size-30 text-white">ویرایش هتل</h2>
                    </div>
                </div><!-- end breadcrumb-content -->
            </div><!-- end col-lg-6 -->
            <div class="col-lg-6">
                <div class="breadcrumb-list text-right">
                    <ul class="list-items">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">صفحه اصلی</a></li>
                        <li><a asp-controller="HotelManagement" asp-action="Index" class="text-white">لیست
                                هتل ها</a></li>
                        <li>ویرایش هتل</li>
                    </ul>
                </div><!-- end breadcrumb-list -->
            </div><!-- end col-lg-6 -->
        </div><!-- end row -->
    </div>
</div><!-- end dashboard-bread -->

<div class="dashboard-main-content">
    <div class="container-fluid">
         <div class="row">
            <div class="col-lg-9 mx-auto">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-success="OperationResult" asp-action="Edit" asp-controller="HotelManagement"> 
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-user mr-2 text-gray"></i>اطلاعات شما</h3>
                        </div><!-- form-title-wrap -->
                        <div class="form-content contact-form-action row">
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label asp-for="PersonalName" class="label-text">نام شما</label>
                                    <div class="form-group">
                                        <span class="la la-user form-icon"></span>
                                        <input class="form-control" asp-for="PersonalName" placeholder="نام شما">
                                        <span asp-validation-for="PersonalName" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="Id"/>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label asp-for="PersonalEmail" class="label-text">ایمیل شما</label>
                                    <div class="form-group">
                                        <span class="la la-envelope-o form-icon"></span>
                                        <input class="form-control" asp-for="PersonalEmail" placeholder="ایمیل شما">
                                        <span asp-validation-for="PersonalEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label class="label-text">نقش شما در این شغل چیست؟</label>
                                    <div class="form-group select-contain w-100">
                                        <select class="select-contain-select" asp-for="PersonalJobTitle"
                                                asp-items='new SelectList(Model.Information.JobTitles,"Id","Title")'>
                                            <option value="0">یکی رو انتخاب کن</option>

                                        </select>
                                        <span asp-validation-for="PersonalJobTitle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                        </div><!-- end form-content -->
                    </div><!-- end form-box -->
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-gear mr-2 text-gray"></i>لیست اطلاعات محل اقامت شما</h3>
                        </div><!-- form-title-wrap -->
                        <div class="form-content contact-form-action">
                            <div class="row">
                                <div class="col-lg-6 responsive-column">
                                    <div class="input-box">
                                        <label asp-for="Name" class="label-text">نام تجاری رسمی</label>
                                        <div class="form-group">
                                            <span class="la la-briefcase form-icon"></span>
                                            <input class="form-control" asp-for="Name" placeholder="نام تجاری رسمی">
                                            <span asp-validation-for="Name" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6 responsive-column">
                                    <div class="input-box">
                                        <label asp-for="StarsCount" class="label-text">تعداد ستاره هتل</label>
                                        <div class="form-group">
                                            <span class="la la-briefcase form-icon"></span>
                                            <input class="form-control" asp-for="StarsCount" placeholder="تعداد ستاره هتل">
                                            <span asp-validation-for="StarsCount" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6 responsive-column">
                                    <div class="input-box">
                                        <label asp-for="Country" class="label-text">کشور</label>
                                        <div class="form-group select-contain w-100">
                                            <select class="select-contain-select" asp-for="Country"
                                                    asp-items='new SelectList(Model.Information.CountriesName,"Id","Name")'>
                                                <option value="0">یک کشور رو انتخاب کن </option>
                                            </select>
                                            <span asp-validation-for="Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="CountryCode" class="label-text">کد کشور/منطقه</label>
                                        <div class="form-group select-contain w-100">
                                            <select class="select-contain-select" asp-for="CountryCode"
                                                    asp-items='new SelectList(Model.Information.CountriesCode,"Id","Code")'>
                                                <option value="0">کد کشور رو انتخاب کن</option>
                                            </select>
                                            <span asp-validation-for="CountryCode" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-4 -->
                                <div class="col-lg-6 responsive-column">
                                    <div class="input-box">
                                        <label asp-for="City" class="label-text">شهر/شهرک، ایالت/استان/منطقه</label>
                                        <div class="form-group">
                                            <span class="la la-map form-icon"></span>
                                            <input class="form-control" asp-for="City" placeholder="مثال: نيويورک">
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label asp-for="Address" class="label-text">آدرس </label>
                                        <div class="form-group">
                                            <span class="la la-map-marker form-icon"></span>
                                            <input class="form-control" asp-for="Address"
                                                placeholder="پلاک ساختمان و نام خیابان مثال: خیابان اصلی 123">
                                        </div>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div><!-- end col-lg-8 -->
                            </div>
                        </div><!-- end form-content -->
                    </div><!-- end form-box -->
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-user mr-2 text-gray"></i>اطلاعات تماس</h3>
                        </div><!-- form-title-wrap -->
                        <div class="form-content contact-form-action">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="PhoneNumber" class="label-text">شماره تلفن</label>
                                        <div class="form-group">
                                            <span class="la la-phone form-icon"></span>
                                            <input class="form-control" asp-for="PhoneNumber"
                                                placeholder="8547 632 (21) 98+ ">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->

                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Email" class="label-text">ایمیل</label>
                                        <div class="form-group">
                                            <span class="la la-envelope-o form-icon"></span>
                                            <input class="form-control" asp-for="Email"
                                                placeholder="ایمیل برای درخواست مشتری">
                                            <span asp-validation-for="Email" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Website" class="label-text">آدرس وب سایت شما</label>
                                        <div class="form-group">
                                            <span class="la la-globe form-icon"></span>
                                            <input asp-for="Website" class="form-control" type="text"
                                                placeholder="https://www.arezo-hoseini.ir">
                                            <span asp-validation-for="Website" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Facebook" class="label-text">صفحه فیسبوک</label>
                                        <div class="form-group">
                                            <span class="la la-facebook form-icon"></span>
                                            <input data-val="false" data-val-required="false" class="form-control" asp-for="Facebook"
                                                placeholder="https://www.facebook.com">
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Twitter" class="label-text">صفحه توییتر</label>
                                        <div class="form-group">
                                            <span class="la la-twitter form-icon"></span>
                                            <input data-val="false" data-val-required="false" class="form-control" asp-for="Twitter"
                                                placeholder="https://www.twitter.com">
                                                
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Linkedin" class="label-text">صفحه لینکدین</label>
                                        <div class="form-group">
                                            <span class="la la-linkedin form-icon"></span>
                                            <input data-val="false" data-val-required="false" class="form-control" asp-for="Linkedin"
                                                placeholder="https://www.linkedin.com">
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                            </div>
                        </div><!-- end form-content -->
                    </div> <!-- end form-box -->
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-building-o mr-2 text-gray"></i>اطلاعات محل اقامت شما</h3>
                        </div><!-- form-title-wrap -->
                        <div class="form-content contact-form-action">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label asp-for="RoomsCount" class="label-text">تعداد کل اتاق ها و سوئیت ها</label>
                                        <div class="form-group">
                                            <span class="la la-pencil form-icon"></span>
                                            <input class="form-control" asp-for="RoomsCount"
                                                placeholder="تعداد کل اتاق ها و سوئیت ها">
                                            <span asp-validation-for="RoomsCount" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><!-- end col-lg-12 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text">محدوده قیمت (شبی)</label>
                                        <div class="form-group d-flex align-items-center">
                                            <input asp-for="MaximumRoomPrice" class="form-control pl-3">
                                            <span asp-validation-for="MinimumRoomPrice" class="text-danger"></span>
                                            <span class="px-2">الى</span>
                                            <input asp-for="MinimumRoomPrice" class="form-control pl-3" >
                                            <span asp-validation-for="MinimumRoomPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label asp-for="Currency" class="label-text">انتخاب واحد پول</label>
                                        <div class="form-group select-contain w-100">
                                            <select class="select-contain-select" asp-for="Currency"
                                                    asp-items='new SelectList(Model.Information.Currencies,"Id","Name")'>
                                                <option value="0">-- انتخاب واحد پول --</option>
                                            </select>
                                            <span asp-validation-for="Currency" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-12">
                                    <div class="input-box">
                                        <label asp-for="Description" class="label-text mb-0 line-height-20">توضیحات محل اقامت شما</label>
                                        <p class="font-size-13 mb-3 line-height-20">حداکثر 400 کاراکتر</p>
                                        <div class="form-group">
                                            <span class="la la-pencil form-icon"></span>
                                            <textarea data-val="false" data-val-required="false" asp-for="Description" class="message-control form-control"
                                                    placeholder="فقط به زبان فارسی، بدون HTML، بدون آدرس وب یا ایمیل"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>                                        
                                        </div>
                                    </div>
                                </div><!-- end col-lg-12 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text text-color-6">حداقل اقامت* (بدون احتساب تعطیلات)</label>
                                        <div class="form-group d-flex align-items-center">
                                            @if(Model.MinimumDaysStayValue == MinimumDaysStay.LessThanThreeNights)
                                            {
                                                <label for="radio-1" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="MinimumDaysStayValue" type="radio" id="radio-1"
                                                        value="@MinimumDaysStay.LessThanThreeNights" checked>
                                                    <span class="checkmark"></span>
                                                    <span>3 شب یا کمتر</span>
                                                </label>
                                                <label for="radio-2" class="radio-trigger mb-0 font-size-14">
                                                    <input asp-for="MinimumDaysStayValue" type="radio" id="radio-2"
                                                        value="@MinimumDaysStay.MoreThanThreeNights">
                                                    <span class="checkmark"></span>
                                                    <span>بیشتر از 3 شب</span>
                                                </label>
                                            }
                                            @if(Model.MinimumDaysStayValue == MinimumDaysStay.MoreThanThreeNights)
                                            {
                                                <label for="radio-1" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="MinimumDaysStayValue" type="radio" id="radio-1"
                                                        value="@MinimumDaysStay.LessThanThreeNights">
                                                    <span class="checkmark"></span>
                                                    <span>3 شب یا کمتر</span>
                                                </label>
                                                <label for="radio-2" class="radio-trigger mb-0 font-size-14">
                                                    <input asp-for="MinimumDaysStayValue" type="radio" id="radio-2"
                                                        value="@MinimumDaysStay.MoreThanThreeNights" checked>
                                                    <span class="checkmark"></span>
                                                    <span>بیشتر از 3 شب</span>
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->

                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text text-color-6">سرویس دهی *</label>
                                        <div class="form-group d-flex align-items-center">
                                            @if(Model.HousekeepingValue == Housekeeping.IncludedInRoomRate)
                                            {
                                                <label for="radio-7" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingValue" type="radio" id="radio-7"
                                                        value="@Housekeeping.IncludedInRoomRate" checked>
                                                    <span class="checkmark"></span>
                                                    <span>در نرخ اتاق گنجانده شده </span>
                                                </label>
                                                <label for="radio-8" class="radio-trigger mb-0 font-size-14">
                                                    <input asp-for="HousekeepingValue" type="radio" id="radio-8"
                                                    value="@Housekeeping.AdditionalFee">
                                                    <span class="checkmark"></span>
                                                    <span>هزینه اضافی</span>
                                                </label>
                                            }
                                            @if(Model.HousekeepingValue == Housekeeping.AdditionalFee)
                                            {
                                                <label for="radio-7" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingValue" type="radio" id="radio-7"
                                                        value="@Housekeeping.IncludedInRoomRate">
                                                    <span class="checkmark"></span>
                                                    <span>در نرخ اتاق گنجانده شده </span>
                                                </label>
                                                <label for="radio-8" class="radio-trigger mb-0 font-size-14">
                                                    <input asp-for="HousekeepingValue" type="radio" id="radio-8"
                                                    value="@Housekeeping.AdditionalFee" checked>
                                                    <span class="checkmark"></span>
                                                    <span>هزینه اضافی</span>
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text text-color-6">دفعات سرویس دهی *</label>
                                        <div class="form-group d-flex align-items-center">
                                            @if(Model.HousekeepingFrequencyValue == HousekeepingFrequency.Daily)
                                            {
                                                <label for="radio-9" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingFrequencyValue" type="radio" id="radio-9"
                                                        value="@HousekeepingFrequency.Daily" checked>
                                                    <span class="checkmark"></span>
                                                    <span>روزانه</span>
                                                </label>
                                                <label for="radio-10" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-10" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هفتگی</span>
                                                </label>
                                                <label for="radio-11" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-11" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Bi_weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هر دو هفته</span>
                                                </label>
                                                <label for="radio-12" class="radio-trigger mb-0 font-size-14">
                                                    <input type="radio" id="radio-12" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Nothing">
                                                    <span class="checkmark"></span>
                                                    <span>هیچی</span>
                                                </label>
                                            }
                                            @if(Model.HousekeepingFrequencyValue == HousekeepingFrequency.Weekly)
                                            {
                                                <label for="radio-9" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingFrequencyValue" type="radio" id="radio-9"
                                                        value="@HousekeepingFrequency.Daily">
                                                    <span class="checkmark"></span>
                                                    <span>روزانه</span>
                                                </label>
                                                <label for="radio-10" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-10" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Weekly" checked>
                                                    <span class="checkmark"></span>
                                                    <span>هفتگی</span>
                                                </label>
                                                <label for="radio-11" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-11" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Bi_weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هر دو هفته</span>
                                                </label>
                                                <label for="radio-12" class="radio-trigger mb-0 font-size-14">
                                                    <input type="radio" id="radio-12" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Nothing">
                                                    <span class="checkmark"></span>
                                                    <span>هیچی</span>
                                                </label>
                                            }
                                            @if(Model.HousekeepingFrequencyValue == HousekeepingFrequency.Bi_weekly)
                                            {
                                                <label for="radio-9" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingFrequencyValue" type="radio" id="radio-9"
                                                        value="@HousekeepingFrequency.Daily">
                                                    <span class="checkmark"></span>
                                                    <span>روزانه</span>
                                                </label>
                                                <label for="radio-10" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-10" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هفتگی</span>
                                                </label>
                                                <label for="radio-11" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-11" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Bi_weekly" checked>
                                                    <span class="checkmark"></span>
                                                    <span>هر دو هفته</span>
                                                </label>
                                                <label for="radio-12" class="radio-trigger mb-0 font-size-14">
                                                    <input type="radio" id="radio-12" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Nothing">
                                                    <span class="checkmark"></span>
                                                    <span>هیچی</span>
                                                </label>
                                            }
                                            @if(Model.HousekeepingFrequencyValue == HousekeepingFrequency.Nothing)
                                            {
                                                <label for="radio-9" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="HousekeepingFrequencyValue" type="radio" id="radio-9"
                                                        value="@HousekeepingFrequency.Daily">
                                                    <span class="checkmark"></span>
                                                    <span>روزانه</span>
                                                </label>
                                                <label for="radio-10" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-10" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هفتگی</span>
                                                </label>
                                                <label for="radio-11" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-11" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Bi_weekly">
                                                    <span class="checkmark"></span>
                                                    <span>هر دو هفته</span>
                                                </label>
                                                <label for="radio-12" class="radio-trigger mb-0 font-size-14">
                                                    <input type="radio" id="radio-12" asp-for="HousekeepingFrequencyValue"
                                                        value="@HousekeepingFrequency.Nothing" checked>
                                                    <span class="checkmark"></span>
                                                    <span>هیچی</span>
                                                </label>
                                            }
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->
                                <div class="col-lg-6">
                                    <div class="input-box">
                                        <label class="label-text text-color-6">حمام *</label>
                                        <div class="form-group d-flex align-items-center">
                                            @if(Model.BathroomValue == Bathroom.AllEnSuite)
                                            {
                                                <label for="radio-16" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input asp-for="BathroomValue" value="@Bathroom.AllEnSuite" type="radio" id="radio-16"
                                                    checked>
                                                    <span class="checkmark"></span>
                                                    <span>تمام سوئیت ها</span>
                                                </label>
                                                <label for="radio-17" class="radio-trigger mb-0 font-size-14 mr-3">
                                                    <input type="radio" id="radio-17" asp-for="BathroomValue" value="@Bathroom.SomeEnSuite">

@model T.Application.Dtos.Bookings.BookingViewModel
<!-- ================================
    START BREADCRUMB AREA
================================= -->
<section class="breadcrumb-area bread-bg-6">
    <div class="breadcrumb-wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title text-white">رزرو پرواز</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a asp-controller="Flight" asp-action="Index">پرواز ها</a></li>
                            <li>رزرو پرواز</li>
                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end breadcrumb-wrap -->
    <div class="bread-svg-box">
        <svg class="bread-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 10" preserveAspectRatio="none">
            <polygon points="100 0 50 10 0 0 0 10 100 10"></polygon>
        </svg>
    </div><!-- end bread-svg -->
</section><!-- end breadcrumb-area -->
<!-- ================================
    END BREADCRUMB AREA
================================= -->

<!-- ================================
    START BOOKING AREA
================================= -->
<section class="booking-area padding-top-100px padding-bottom-70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">اطلاعات شخصی شما</h3>
                    </div><!-- form-title-wrap -->
                    <div class="form-content ">
                        <div class="contact-form-action">
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">نام</label>
                                            <div class="form-group">
                                                <span class="la la-user form-icon"></span>
                                                <input class="form-control" type="text" name="text" placeholder="نام">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">نام خانوادگی</label>
                                            <div class="form-group">
                                                <span class="la la-user form-icon"></span>
                                                <input class="form-control" type="text" name="text"
                                                    placeholder="نام خانوادگی">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">ایمیل شما</label>
                                            <div class="form-group">
                                                <span class="la la-envelope-o form-icon"></span>
                                                <input class="form-control" type="email" name="email"
                                                    placeholder="آدرس ایمیل">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">شماره تلفن</label>
                                            <div class="form-group">
                                                <span class="la la-phone form-icon"></span>
                                                <input class="form-control" type="text" name="text"
                                                    placeholder="شماره تلفن">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-12 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">آدرس</label>
                                            <div class="form-group">
                                                <span class="la la-map-marked form-icon"></span>
                                                <input class="form-control" type="text" name="text" placeholder="آدرس">
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-12 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">کشور</label>
                                            <div class="form-group">
                                                <div class="select-contain w-auto">
                                                    <select class="select-contain-select">
                                                        <option value="select-country">کشور رو انتخاب کن</option>
                                                        <option value='AD'> آندورا</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">کد کشور</label>
                                            <div class="form-group">
                                                <div class="select-contain w-auto">
                                                    <select class="select-contain-select">
                                                        <option value="country-code">کد کشور رو انتخاب کن</option>
                                                        <option value="ALB">آلبانی (355)</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-12">
                                        <div class="input-box">
                                            <div class="custom-checkbox mb-0">
                                                <input type="checkbox" id="receiveChb">
                                                <label for="receiveChb"> میخوام تبلیغات Trizen رو در آینده دریافت
                                                    کنم</label>
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-12 -->
                                </div>
                            </form>
                        </div><!-- end contact-form-action -->
                    </div><!-- end form-content -->
                </div><!-- end form-box -->

            </div><!-- end col-lg-8 -->
            <div class="col-lg-4">
                <div class="form-box booking-detail-form">
                    <div class="form-title-wrap">
                        <h3 class="title">جزئیات رزرو</h3>
                    </div><!-- end form-title-wrap -->
                    <div class="form-content">
                        <div class="card-item shadow-none radius-none mb-0">
                            <div class="card-img pb-4">
                                <a href="flight-single.html" class="d-block">
                                    <img src="@Model.ImageSrc" alt="plane-img">
                                </a>
                            </div>
                            <div class="card-body p-0">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h3 class="card-title">@Model.Origin به @Model.Destination</h3>
                                        <p class="card-meta">@Model.FlightType</p>
                                    </div>
                                </div>
                                <div class="card-rating">
                                    <span class="badge text-white">@Model.Rate/5</span>
                                    <span class="rating__text">(@Model.CommentCount نظر)</span>
                                </div>
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 list--items-2 py-2">
                                    <li class="font-size-15"><span class="w-auto d-block mb-n1"><i
                                                class="la la-plane mr-1 font-size-17"></i> پرواز</span>@Model.TakeOff
                                        ساعت @Model.TakeOffTime</li>
                                    <li class="font-size-15"><i
                                            class="la la-clock-o mr-1 text-black font-size-17"></i>@Model.TotalTimeOfFlight
                                    </li>
                                    <li class="font-size-15"><span class="w-auto d-block mb-n1"><i
                                                class="la la-plane mr-1 font-size-17"></i>فرود</span>@Model.Landing
                                    </li>
                                </ul>
                                <h3 class="card-title pb-3">جزئیات سفارش</h3>
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 py-3">
                                    <li><span>شرکت هواپیمایی : </span>@Model.AirlineCompanyName</li>
                                    <li><span>نوع پرواز:</span>@Model.Coach</li>
                                    <li><span>هزینه پایه :</span>@Model.BasePrice.ToString("n0") تومان</li>
                                    <li><span>مسافران :</span>@Model.SeatCount</li>
                                </ul>
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 pt-3">
                                    <li><span>مجموع :</span>@Model.TotalPrice.ToString("n0") تومان</li>
                                    <li><span>مالیات و کارمزد :</span>@Model.ExtraFee.ToString("n0") تومان</li>
                                    <li><span>مجموع با تخفیف:</span>@Model.TotalPriceWithDiscount.ToString("n0") تومان
                                    </li>
                                </ul>
                            </div>
                        </div><!-- end card-item -->
                    </div><!-- end form-content -->
                </div><!-- end form-box -->
            </div><!-- end col-lg-4 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end booking-area -->
<!-- ================================
    END BOOKING AREA
================================= -->

<div class="section-block"></div>


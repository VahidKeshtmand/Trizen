@model T.Application.Dtos.Account.VerifyPhoneNumberDto
@{
    ViewData["Title"] = "ترازن - صفحه تأیید شماره موبایل";
}

<!-- ================================
    START BREADCRUMB AREA
================================= -->
<section class="breadcrumb-area bread-bg-9">
    <div class="breadcrumb-wrap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="breadcrumb-content">
                        <div class="section-heading">
                            <h2 class="sec__title text-white">تأیید شماره موبایل</h2>
                        </div>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-6 -->
                <div class="col-lg-6">
                    <div class="breadcrumb-list text-right">
                        <ul class="list-items">
                            <li><a asp-controller="Home" asp-action="Index">صفحه اصلی</a></li>
                            <li>تأیید شماره موبایل</li>
                        </ul>
                    </div><!-- end breadcrumb-list -->
                </div><!-- end col-lg-6 -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end breadcrumb-wrap -->
    <div class="bread-svg-box">
        <svg class="bread-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 10" preserveAspectRatio="none">
            <polygon points="100 0 50 10 0 0 0 10 100 10"></polygon>
        </svg>
    </div><!-- end bread-svg -->
</section><!-- end breadcrumb-area -->
<!-- ================================
    END BREADCRUMB AREA
================================= -->

<!-- ================================
    START CONTACT AREA
================================= -->
<section class="contact-area padding-top-100px padding-bottom-70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">تأیید شماره موبایل</h3>
                        <p class="font-size-15 pt-2"> با زدن دکمه ارسال پیامک کدی برای موبایل شما
                            پیامک می شود. کد را وارد کنید تا شماره موبایل شما تأیید شود.
                        </p>
                    </div><!-- form-title-wrap -->
                    <div class="form-content ">
                        <div class="contact-form-action">
                            <form method="post" asp-action="VerifyPhoneNumber" asp-controller="Account" data-ajax="true"
                                data-ajax-success="VerifyPhoneNumberSubmitted">

                                <div class="input-box">
                                    <label class="label-text">کد ارسال شده را وارد کنید.</label>
                                    <div class="form-group">
                                        <span class="la la-envelope-o form-icon"></span>
                                        <input asp-for="Token" class="form-control" placeholder="کد" />
                                        <span asp-validation-for="Token" class="text-danger"></span>
                                        <input asp-for="PhoneNumber" value="@ViewBag.PhoneNumber" type="hidden" />
                                    </div>

                                </div>

                                <div class="btn-box">
                                    <a href="#" class="theme-btn theme-btn-transparent mr-1" onclick="SendToken()"
                                        id="btn-send-sms">ارسال پیامک</a>
                                    <input type="submit" value="تأیید" class="theme-btn" />
                                </div>
                            </form>

                        </div><!-- end contact-form-action -->
                    </div><!-- end form-content -->
                </div><!-- end form-box -->
            </div><!-- end col-lg-8 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end contact-area -->
<!-- ================================
    END CONTACT AREA
================================= -->
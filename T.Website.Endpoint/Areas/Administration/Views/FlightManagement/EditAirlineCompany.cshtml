@model T.Application.Dtos.Flights.EditAirlineCompanyDto

<div class="dashboard-bread dashboard--bread dashboard-bread-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="breadcrumb-content">
                    <div class="section-heading">
                        <h2 class="sec__title font-size-30 text-white">ویرایش شرکت هواپیمایی</h2>
                    </div>
                </div><!-- end breadcrumb-content -->
            </div><!-- end col-lg-6 -->
            <div class="col-lg-6">
                <div class="breadcrumb-list text-right">
                    <ul class="list-items">
                        <li><a asp-controller="Home" asp-action="Index" class="text-white">صفحه اصلی</a></li>
                        <li><a asp-controller="FlightManagement" asp-action="Index" class="text-white">شرکت های
                                هواپیمایی</a></li>
                        <li>ویرایش شرکت هواپیمایی</li>
                    </ul>
                </div><!-- end breadcrumb-list -->
            </div><!-- end col-lg-6 -->
        </div><!-- end row -->
    </div>
</div><!-- end dashboard-bread -->

<div class="dashboard-main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-9 mx-auto">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" enctype="multipart/form-data" asp-action="EditAirlineCompany"
                    asp-controller="FlightManagement" data-ajax="true" data-ajax-success="OperationResult">
                    <div class="form-box">
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-plane mr-2 text-gray"></i>اطلاعات شرکت هواپیمایی</h3>
                        </div><!-- form-title-wrap -->
                        <div class="form-content contact-form-action row">
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label asp-for="Name" class="label-text">نام رسمی شرکت</label>
                                    <div class="form-group">
                                        <span class="la la-briefcase form-icon"></span>
                                        <input class="form-control" asp-for="Name" placeholder="نام رسمی شرکت">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label asp-for="PhoneNumber" class="label-text">شماره تلفن</label>
                                    <div class="form-group">
                                        <span class="la la-phone form-icon"></span>
                                        <input class="form-control" asp-for="PhoneNumber" placeholder="شماره تلفن">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-6 responsive-column">
                                <div class="input-box">
                                    <label asp-for="Website" class="label-text">وبسایت</label>
                                    <div class="form-group">
                                        <span class="la la-globe form-icon"></span>
                                        <input class="form-control" asp-for="Website" placeholder="وبسایت">
                                        <span asp-validation-for="Website" class="text-danger"></span>
                                    </div>
                                </div>


                            </div><!-- end form-content -->
                            <div class="col-lg-12 responsive-column">
                                <div class="input-box">
                                    <label asp-for="Address" class="label-text">آدرس</label>
                                    <div class="form-group">
                                        <span class="la la-map-marker form-icon"></span>
                                        <input class="form-control" asp-for="Address" placeholder="آدرس">
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-12 responsive-column">
                                <div class="input-box">
                                    <label asp-for="Description" class="label-text">توضیحات</label>
                                    <div class="form-group">
                                        <textarea data-val="false" data-val-required="false" asp-for="Description"
                                            class="message-control form-control"></textarea>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->
                            <div class="col-lg-12 responsive-column">
                                <div class="input-box">
                                    <label class="label-text">آپلود لوگو</label>
                                    <div class="file-upload-wrap">
                                        <input asp-for="Logo" class="multi file-upload-input with-preview">
                                        @* <span asp-validation-for="Images" class="text-danger"></span>*@
                                        <span class="file-upload-text"><i class="la la-upload mr-2"></i>برای
                                            بارگذاری روی تصاویر کلیک کن یا بکش</span>
                                    </div>
                                </div>
                            </div><!-- end col-lg-6 -->

                        </div><!-- end form-content -->
                    </div><!-- end form-box -->
                    <div class="submit-box">
                        <h3 class="title pb-3">ارسال این لیست</h3>
                        <div class="custom-checkbox">
                            <input type="checkbox" id="agreeChb">
                            <label for="agreeChb">
                                این کادر را علامت بزنید تا تأیید کنید که شما نماینده رسمی ملکی هستید که
                                این لیست را برای آن ارسال می کنید و اطلاعاتی که ارائه کرده اید صحیح است. وقتی تصویری را
                                ارسال می‌کنید، همچنین تصدیق می‌کنید که حق استفاده از تصویر را در وب دارید و موافقت
                                می‌کنید
                                که به Trizen با توجه به هیچ‌یک و همه مسائل مربوط به حق نسخه‌برداری ناشی از استفاده شما
                                از
                                تصویر آسیب نرسانید.
                            </label>
                        </div>
                        <div class="btn-box pt-3">
                            <input type="submit" class="theme-btn" value="ارسال">
                        </div>
                    </div>
                </form><!-- end submit-box -->
                <div class="form-title-wrap">
                    <h3 class="title"><i class="la la-photo mr-2 text-gray"></i>لوگوی انتخاب شده (لطفاً از
                        انتخاب عکس تکراری خود داری کنید)</h3>
                </div><!-- form-title-wrap -->
                @if (Model.ImagesModel.Count() > 0)
                {
                    <div class="form-content contact-form-action">
                        <div class="col-lg-12">
                            <div class="MultiFile-list">
                                @foreach (var item in Model.ImagesModel)
                                {
                                    <span class="MultiFile-label">
                                        <span class="MultiFile-title"></span>
                                        <img class="MultiFile-preview" src="@item.Src"
                                    style="max-height:100px; max-width:100px;" />
                                        <button onclick="RemoveImage(@item.Id)" class="btn btn-danger">حذف</button>
                                    </span>
                                }
                            </div>
                        </div><!-- end col-lg-12 -->
                </div><!-- end form-content -->
                }
            </div><!-- end col-lg-9 -->
        </div><!-- end row -->
    </div><!-- end container-fluid -->
</div><!-- end dashboard-main-content -->




@section Css
{
<link rel="stylesheet" href="~/css/toastr.min.css">
}
@section Scripts
{
<script src="https://cdn.ckeditor.com/4.13.0/standard-all/ckeditor.js"></script>
<script>
    CKEDITOR.replace('Description', {
        language: 'fa',
        contentsLangDirection: 'rtl',
        height: 270,
    });
</script>
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/Theme/js/jquery.multi-file.min.js"></script>
<script src="~/js/toastr.min.js"></script>
<script src="~/js/custom-alert.js" asp-append-version="true"></script>
<script src="~/js/sweetalert2.all.min.js"></script>

}
